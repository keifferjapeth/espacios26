            <label for="playgroundInput">Customer Message</label>
            <textarea id="playgroundInput" class="playground-textarea" placeholder="Example: Do you offer free shipping to Canada?"></textarea>

            <div class="playground-controls">
              <select id="playgroundContext" class="playground-select" aria-label="Context">
                <option value="clothing brand">Clothing Brand</option>
                <option value="saas company">SaaS Company</option>
